                        <Entry Keyboard="Numeric" Text="{Binding EntryText}" >
                            <Entry.Behaviors>
                                <behaviors:EntryLengthValidatorBehavior MaxLength="3" />
                            </Entry.Behaviors>
                        </Entry>
                        
                        
                        <Entry Placeholder="Enter a System.Double">
                            <Entry.Behaviors>
                                <behaviors:Nu
                                
                                <local:NumericValidationBehavior />
                            </Entry.Behaviors>
                        </Entry>
